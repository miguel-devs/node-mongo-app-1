<main class="form-signin w-100 h-100 d-flex
 justify-content-center align-items-center  m-auto">

 <div>
  <div class="d-flex justify-content-center ">
       <h1>Olvide mi contraseña</h1>
  </div>

  <form action="/login" method="post" autocomplete="false">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class="mb-3">
      <label for="email" class="form-label">Correo</label>
      <input id="email" name="email" class="form-control" type="email" autocomplete="username" required>
    </div>

    
    <div class="text-center">
      {{#each  mensajes}}
        <p class="text-danger">{{this.msg}}</p>
      {{/each}}
    </div>



    <button class="w-100 btn btn-lg btn-primary" type="submit">Enviar</button>
    <div class="mt-3 text-center">
       <div class="mb-2"><a href="/">Iniciar sesión</a></div>
    </div>
  </form>
  </div>
</main>